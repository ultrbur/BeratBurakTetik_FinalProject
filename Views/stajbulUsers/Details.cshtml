@model stajbul.Models.stajbulUser
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Details";
}

<h1>Profilim</h1>

<div>
    <h4>@HttpContextAccessor.HttpContext.Session.GetString("name").ToString()</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.birthdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.school)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.school)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.department)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Düzenle</a> |
    @if (HttpContextAccessor.HttpContext.Session.GetString("admin") == "True")
    {
        <a asp-action="Index">Tüm kullanıcılara geri dön</a>
    }
</div>
