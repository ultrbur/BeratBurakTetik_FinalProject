@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


    <ul class="navbar-nav">
        @if (HttpContextAccessor.HttpContext.Session.GetString("id") == null)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="stajbulUsers" asp-action="Login">Giriş Yap</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="stajbulUsers" asp-action="Create">Kayıt Ol</a>
            </li>
        }
        @if (HttpContextAccessor.HttpContext.Session.GetString("id") != null)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="stajbulUsers" asp-action="Details" asp-route-id="@HttpContextAccessor.HttpContext.Session.GetInt32("id")">@HttpContextAccessor.HttpContext.Session.GetString("name").ToString()</a>
            </li>   
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="stajbulUsers" asp-action="Logout">Çıkış Yap</a>
            </li>
        }

    </ul>
